@page "/c_libro"
@inject HttpClient httpClient

<div class="card">
	<div class="card-header">
		<h3 class="card align-items-center">Consulta de Libros</h3>
	</div>

	<div class="card-body">
		<div class="row">
			<button type="button" @onclick="Buscar" class="btn btn-primary input-group-text">
				<i class="oi oi-magnifying-glass " />
			</button>
		</div>
		@if (Libro is not null)
		{
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Imagen</th>
						<th>T&iacutetulo</th>
						<th>Email</th>
						<th>Fecha</th>
						<th>Puntuaci&oacuten</th>
						<th>Rese&ntildea</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var libro in Libro)
					{
						<tr>
							<td src="@libro.Imagen"></td>
							@*<td>@libro.Imagen</td>*@
							<td>@libro.Titulo</td>
							<td>@libro.Email</td>
							<td>@libro.Fecha.ToString("dd/MM/yyyy")</td>
							<td>@libro.Puntuacion</td>
							<td>@libro.Resena</td>
							<td><a href="Libro/@libro.LibroId">Ver</a></td>
						</tr>
					}
				</tbody>
			</table>
		}
	</div>

	<div class="card-footer">
		<div class="form-row justify-content-sm-between" aria-orientation="vertical">
			<div class="col-3">
				<label for="CantidaRegistro" class="col-form-label"><strong>Filas</strong>&nbsp;</label>
				<input id="CantidaRegistro" @bind-value="@conteo" disabled class="form-control" />
			</div>
		</div>
	</div>
</div>

@code {
	public List<Libros>? Libro { get; set; }
	public int conteo { get; set; }

	public async Task Buscar()
	{
		Libro = await httpClient.GetFromJsonAsync<List<Libros>>($"api/Libros");

		conteo = Libro != null ? Libro!.Count() : 0;
		StateHasChanged();
	}
}